            url: "/WordListN4N3/Member",
            data: { "Member": member },
            success: function (data) {
                if (data == "admin") {
                    guest = "admin";
                }
                else
                    guest = "member";

                if (guest == "member") {
                    $("#editTitle").remove();
                    $("#CreateNWord").remove();
                }
