            $("#C種類").val(a);
            $("#C難度").val("N5");
        })
        //新增
        $("#CreateWord").click(function () {
            var form = document.querySelector("#createword");
            var fd = new FormData(form);
            $.ajax({
                url: "/WordListN4N3/N4Create",
                type: "POST",
                contentType: false,
                processData: false,
                data: fd,
                success: function (data) {
                    if ($("#C日文").val() == "" || $("#C中文").val() == "" || $("#C假名").val() == "" || $("#C種類").val() == "") {
                        Swal.fire({
                            icon: 'error',
                            title: '有項目未填寫!'
                        })
                        $("#CreateNWord").click();
                    }
                    else {
                        Swal.fire({
                            icon: 'success',
                            title: '單字新增成功',
                            showConfirmButton: false,
                            timer: 1000
                        })
