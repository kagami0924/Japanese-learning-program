                url: "/WordListN4N3/WordEdit2",
                type: "POST",
                dataType: "json",
                data: { "No": parseInt(wordEdit.attr("no")) },
                success: function (data) {
                    $("#No").val(data[0].No);
                    $("#日文").val(data[0].日文);
                    $("#中文").val(data[0].中文);
                    $("#假名").val(data[0].假名);
