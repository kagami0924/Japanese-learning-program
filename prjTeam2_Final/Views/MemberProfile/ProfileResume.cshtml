@section scripts{

    @*<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>*@
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>
    @*<script src="~/Scripts/bootbox.js"></script>*@
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/project.js"></script>
    <script src="~/Scripts/project.extends.js"></script>
    <script src="~/Scripts/project.Test.js"></script>
    <script src="~/Content/calendar/moment.min.2.18.1.js"></script>
    <script src="~/Content/fullcalendar-3.4.0/fullcalendar.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>


    <script>
        //<------------------顯示頁面------顯示頁面與登錄身分不符回首頁------------------>
        var hr = document.location.href.split("/")
        var NowMember = document.cookie == "" ? 0 : (document.cookie.split('MemberID=')[1].split("&")[0] / 1)
        if (hr[hr.length - 1] == NowMember) {
            $.ajax({
                url: "/MemberProfile/ShowMember",
                data: { "MemberID": NowMember },
                success: function (data) {

                    $(".memberName").text(data[0].MemberName);

                },
            })
            $.ajax({
                url: "/Member/ShowCategory",
                data: { "MemberID": NowMember },
                success: function (data) {
                    if (data.length == 0)
                        $(".submenu").append(`<a class="submenu-item" id="add-topic">新增題目</a>`)
                    for (var i = 0; i < data.length; i++) {
                        $(".submenu").append(`<a class="submenu-item show-topic">${data[i].Category}</a>`)

                    }
                },
            })


        }
        else {
            Swal.fire({
                icon: 'error',
                //title: '壞壞喔',
                text: '您沒有權限查看此頁面',
            }).then((result) => {
                window.location.href = "/Home/Index"
            });
        }

        //<------------------左下導覽列的分頁操作------------------>
        $("#發文").click(function () {
            $("#main-post").removeClass("noview");
            $("#main-edit").addClass("noview");
        });
        $("#編輯個資").click(function () {
            $("#main-edit").removeClass("noview");
            $("#main-post").addClass("noview");
        });


        $(".list-group-item-action").click(function () {
            $(".list-group-item-action").removeClass("active")
            $(this).addClass("active")
        })
        //<-----------------左上個人頁面卡片的頁面------------------>
        $(document).ready(() => {
            $.ajax({
                url: "/MemberProfile/CardProfile",
                data: { "MemberID": NowMember },
                success: function (data) {
                    $("#ProfileCard").html(`
                                                <div id="profile-resume" class="card">
                                                <img class="card-img-top img-responsive" src="/imgs/backgrd.jpg">
                                                <div class="card-block">
                                                    <div class="card-img"  data-toggle="modal" data-target="#MemberImg"><img class="member-img"/></div>
                                                    <h4 class="card-title">
                                                        ${data.fMemberName}
                                                        <small>${data.fNickname}</small>
                                                    </h4>
                                                     <p class="card-text">努力できるということも
                                                    <br/>実力のうち。
                                                    <br/>督促自己努力,
                                                    <br/>也是一種實力!</p>
                                                    <ul class="list-inline list-unstyled">
                                                        <li id="card-comment">
                                                            <span class="profile-stats">${data.fLivingArea}</span>
                                                            </li>
                                                    </ul>
                                                </div>
                                            </div>`
                    )
                }
            })
            刷新();
        });

        //<-------------------------載入個人圖片------------------------------->
        setTimeout(function () {
            $.ajax({
                url: "/Member/ReImg",
                data: { "MemberID": NowMember },                
                cache: false,
                success: function (data) {
                    if (data == "null") {
                        $(".member-img").attr("src", "/MemberImg/DefaultImg.jpg");
                    }
                    else {
                        $(".member-img").attr("src", `${data}`);
                    }
                }
            })
        }, 100);

        //<-----------------新增發文--------------------------------->
        $("#btnPost").click(function () {
            console.log($("#要發的文").val());
            $.ajax({
                url: "/MemberProfile/PostDiary",
                data: { "content": $("#要發的文").val(), "MemberID": NowMember },
                type: "POST",
                success: function (data) {
                    console.log(data);
                    刷新();
                    $("#要發的文").val("");
                }
            })
        });
        //<-----------------刷新--------------------------------->
        function 刷新() {
            $.ajax({
                url: "/MemberProfile/MainProfile",
                data: { "MemberID": NowMember },
                success: function (data) {
                    var txt = "";
                    for (var i = 0; i < data.length; i++) {
                        txt += ` <ul id="feed" class="list-unstyled">
                                                      <li><div class="feed-post" style="width:400px">
                                                         <h5>
                                                                 <small> 發佈日期${data[i].fPostDate} </small>
                                                        </h5>
                                                          <p id="SHOWPOST${data[i].fPostID}" class=" form-control">${data[i].fPost}</p>
                                                          </div>
                                                          <div class="action-list">
                                                          <button id="EDIT${data[i].fPostID}" data-post="${data[i].fPost}" type="button" class="EditPost_btn btn btn btn-outline-primary" data-toggle="modal" data-target="#秀出修改貼文的視窗">
                                                          <img src="/imgs/icon-edit.png" />編輯貼文</button>
                                                     <button id="DEL${data[i].fPostID}" type="button" class="DelPost_btn btn btn-outline-danger"><img src="/imgs/icon-delete.png" />刪除</button>
                     </div> </li> </ul>
                                                                            `
                    }
                    $("#show").html(txt);
                }
            });
        }
        //<-----------------刪除發文--------------------------------->
        $("#show").on('click', '.DelPost_btn', function () {
            var AA = $(this).attr("id").split('DEL');
            console.log(AA);
            $.ajax({
                url: "/MemberProfile/DeletePost",
                data: { fPostID: `${AA[1]}` },
                type: "GET",
                success: function (data) {
                    console.log(data);
                    刷新();
                },
            });
        });

        //<-----------------秀出來修改的文事件--------------------------------->
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
        var BB = "";
        $("#show").on('click', '.EditPost_btn', (function (event) {
            console.log(this.dataset);
            BB = $(this).attr("id").split('EDIT')[1];
            $('#秀出的發文').val(this.dataset.post);

        }))
        $("#SHOWPOST").on('click', '.SaveEditPost_btn', function () {
            console.log(BB);
            $.ajax({
                url: "/MemberProfile/EditPost",
                data: { "fPostID": BB / 1, "fPost": $("#秀出的發文").val() },
                type: "GET",
                success: function (data) {
                    console.log(data);

                    刷新();
                }
            })
        })
        //------------秀出來個人資訊編輯頁面------------
        $("#編輯個資").click(function () {
            console.log(NowMember)
            $.ajax({
                url: "/MemberProfile/ProfileInfoNew",
                data: { "MemberID": NowMember },
                success: function (data) {
                    $("#main-edit").html(`
