
@{
    ViewBag.Title = "ProfileResume";
}

@section style{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">*@
    <link href="~/Content/Lapis.css" rel="stylesheet" />

    <style>
        .DelBtn {
            background-color: #922932
        }

        td a {
            color: #2d3d5a;
        }
        .member-img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .PreviewImg {
            width: 280px;
            height: 280px;
            border-radius: 50%;
            overflow: hidden;
        }


        .list-group-item.active {
            background-color: #2d3d5a;
            border-color: #2d3d5a;
        }
        /*.card-block img*/
        .card-img {
            /*top: 50%;*/
            margin-top: -36px;
            width: 100px;
            height: 100px;
            border: 3px solid #FFF;
            border-radius: 50%;
            float: left;
            overflow: hidden;
            /*position: relative;*/
            /*z-index: 99;*/
        }

        .card-block .card-title {
            float: left;
            margin: 0;
            margin-left: 0.5em;
        }

            .card-block .card-title small {
                display: block;
            }

        .card-block .card-text {
            clear: both;
            padding-top: 0.25em;
            margin-bottom: 1.5em;
            margin-left: 20px;
            margin-top: 10px;
        }

        .card-block ul a:hover {
            text-decoration: none;
        }

        .card-block ul .profile-stats {
            color: #777;
            display: block;
            text-transform: uppercase;
            font-size: 0.63em;
            margin-left: 20px;
        }

        .card-block ul .profile-value {
            color: #000;
            /*font-size: 1.2em;*/
            font-weight: bold;
            color: #2F92CA;
        }

        body {
            background-color: #F5F8FA;
        }

        form#new-profile {
            border-radius: 0.4rem 0.4rem 0 0;
            padding: 1em;
            border-bottom: 0.1em solid #CEE4F5;
            background-color: #EBF4FB;
        }

        form#new-message {
            border-radius: 0.4rem 0.4rem 0 0;
            padding: 1em;
            border-bottom: 0.1em solid #CEE4F5;
            background-color: #EBF4FB;
        }

            form#new-message .input-group-addon {
                background-color: #FFF;
            }

        .row .card {
            margin-top: 2rem;
        }

        .view {
            display: block;
        }

        .noview {
            display: none;
        }


        ul#feed {
            margin: 10px;
        }

            ul#feed li {
                padding: 1em 1em;
            }

            ul#feed .feed-avatar {
                width: 8%;
                display: inline-block;
                vertical-align: top;
            }

            ul#feed .feed-post {
                width: 50%;
                display: inline-block;
                margin-left: 2%;
            }

                ul#feed .feed-post h5 {
                    font-weight: bold;
                    margin-bottom: 0.5rem;
                }

            ul#feed .action-list {
                margin-left: 13%;
                padding-left: 1em;
            }

                ul#feed .action-list a {
                    width: 15%;
                    display: inline-block;
                }

                    ul#feed .action-list a:hover {
                        text-decoration: none;
                    }

                ul#feed .action-list .retweet-count {
                    padding-left: 0.2em;
                    font-weight: bold;
                }
        /* ===================================
        版型
        ===================================*/
        * {
            box-sizing: border-box;
        }

        ul a {
            display: inline-block;
            text-decoration: none;
            color: #666;
        }
        /* ===================================
        布局樣式
        ===================================*/
        .menu {
            max-width: 300px;
            margin: 0 auto;
            list-style-type: none;
            border-radius: 10px;
            padding: 0;
            text-align: center;
        }
        /* ===================================
        動態效果
        ===================================*/
        .drop-down {
            position: relative;
        }

        .submenu {
            position: relative;
            opacity: 0;
            width: 100%;
            z-index: 8;
            transition: opacity 0.5s ease;
        }

        .submenu-item {
            display: block;
            height: 0px;
            overflow: hidden;
            transition: height 0.5s ease;
        }

        .drop-down:hover .submenu {
            opacity: 1;
        }

        .drop-down:hover .submenu-item {
            overflow: visible;
            height: 30px;
        }
        /* ===================================
        視覺樣式
        ===================================*/
        .item {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 10px;
        }

            .item:hover {
                background: #ddd;
            }

        .submenu-item {
            background: #aaa;
            color: #eee;
            width: 100%;
            padding-left: 20px;
            line-height: 30px;
        }

            .submenu-item:hover {
                background: #2d3d5a;
                color: #ccc;
            }

        .now .item {
            background: #ddd;
        }

        .now .submenu {
            opacity: 1;
        }

        .now .submenu-item {
            background: #555;
            overflow: visible;
            height: 30px;
        }

        .CustomizeTable {
            margin-top: 50px;
        }
    </style>
}
